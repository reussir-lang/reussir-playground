{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Reussir",
    "scopeName": "source.reussir",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#capabilities"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#type-names"
        },
        {
            "include": "#identifiers"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.reussir",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.reussir",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.reussir",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.reussir",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.reussir",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.reussir",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "capabilities": {
            "patterns": [
                {
                    "name": "storage.modifier.capability.reussir",
                    "match": "\\[\\s*(shared|value|flex|rigid|field|regional)\\s*\\]",
                    "captures": {
                        "1": {
                            "name": "storage.modifier.capability.reussir"
                        }
                    }
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.declaration.reussir",
                    "match": "\\b(fn|struct|enum|pub)\\b"
                },
                {
                    "name": "keyword.control.reussir",
                    "match": "\\b(if|else|match|let|return|as|regional)\\b"
                }
            ]
        },
        "types": {
            "patterns": [
                {
                    "name": "storage.type.primitive.reussir",
                    "match": "\\b(bool|str|unit|u8|u16|u32|u64|i8|i16|i32|i64|f16|f32|f64|bf16|f8)\\b"
                },
                {
                    "name": "support.type.reussir",
                    "match": "\\b(Rc|Nullable)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.reussir",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.arrow.reussir",
                    "match": "->|=>"
                },
                {
                    "name": "keyword.operator.assignment.reussir",
                    "match": ":="
                },
                {
                    "name": "keyword.operator.namespace.reussir",
                    "match": "::"
                },
                {
                    "name": "keyword.operator.range.reussir",
                    "match": "\\.\\."
                },
                {
                    "name": "keyword.operator.comparison.reussir",
                    "match": "==|!=|<=|>=|<|>"
                },
                {
                    "name": "keyword.operator.arithmetic.reussir",
                    "match": "[+\\-*/%]"
                },
                {
                    "name": "keyword.operator.logical.reussir",
                    "match": "&&|\\|\\|"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.reussir",
                    "match": "\\b(fn)\\s+([\\p{L}_][\\p{L}\\p{N}_]*)",
                    "captures": {
                        "1": {
                            "name": "keyword.declaration.reussir"
                        },
                        "2": {
                            "name": "entity.name.function.reussir"
                        }
                    }
                }
            ]
        },
        "type-names": {
            "patterns": [
                {
                    "comment": "Type names starting with uppercase letter",
                    "name": "entity.name.type.reussir",
                    "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
                }
            ]
        },
        "identifiers": {
            "patterns": [
                {
                    "name": "variable.other.reussir",
                    "match": "\\b[a-z_][\\w]*\\b"
                }
            ]
        }
    }
}
